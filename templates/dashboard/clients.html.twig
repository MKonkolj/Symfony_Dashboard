{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}

    {{ form_start(add_client_form) }}
        {{ form_row(add_client_form.client_name, {label: 'Client name'}) }}
        {{ form_row(add_client_form.email) }}
        {{ form_row(add_client_form.manager) }}
        {{ form_row(add_client_form.payment_method) }}
    {{ form_end(add_client_form) }}

    <table>
        <thead>
            <th>Avatar</th>
            <th>Name</th>
            <th>Email</th>
            <th>Manager</th>
            <th>Payment</th>
            <th>Options</th>
        </thead>
        <tbody>
        {% for row in clients %}
            <tr>
                <td><img style="width: 50px;" src="{{ row.avatar }}" alt="{{ row.getClientName() ~ " avatar" }}"></td>
                <td>{{ row.getClientName() }}</td>
                <td>{{ row.email }}</td>
                <td>{{ row.manager }}</td>
                <td>{{ row.getPaymentMethod() }}</td>
                <td><a href="{{ path("dashboard_client_show", {id: row.id}) }}">View</a></td>
                <td><a href="{{ path("dashboard_delete", {route: "client", id:row.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
