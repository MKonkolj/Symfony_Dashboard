<!-- TABLE SIDE -->
<div class="profile-table-container">
    <table class="table profile-table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Description</th>
                <th>Date</th>
                <th>Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
                <tr>
                    <td class="profile-table-cell">{{ task.client_name }}</td>
                    <td class="profile-table-cell">{{ task.description }}</td>
                    <td class="profile-table-cell">{{ task.date|date("m/d/Y") }}</td>
                    <td class="profile-table-cell">{{ task.time|date("H:I") }}</td>
                    <td class="profile-table-cell profile-hours-option">
                        <span class="edit-option options-icon"></span>
                        <span class="delete-option options-icon"></span>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>